package dataio;

import java.io.*;
import java.util.*;


public class DataProcess {
	private String filePath;
	private StringBuilder data = new StringBuilder("");
	private int nW = 0;
	private ArrayList<String> lines;
	
	public DataProcess(String filePath) {
		this.filePath = filePath;
	}
	
	public String getFilePath() {
		return filePath;
	}

	public void setFilePath(String filePath) {
		this.filePath = filePath;
	}
	
	//	Read file
	public String readLogFile() {
		FileReader file;
		data = new StringBuilder(""); 
		try {
			file = new FileReader(filePath);
			BufferedReader reader = new BufferedReader(file);
			
			String string; 
			while((string = reader.readLine()) != null) {
				if(string.contains("iptables: ")) {					
					data.append(string+"\n");
				}
			}
			System.out.println("Read successfully!");
			reader.close();
			return data.toString();
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return null;
	}
	
	public boolean writeToFile() {
		try {
			FileWriter file = new FileWriter("../data/log_"+String.valueOf(nW++)+".txt");
			BufferedWriter writer = new BufferedWriter(file);
			writer.write(data.toString());
			System.out.println("Write successfully!");
			writer.close();
			return true;
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return false;
		
	}
	
	
	
	public void analyseFirstLine() {
		toArrayList();
//		System.out.println(lines.get(0));
//		Jun  6 15:33:38 trungserver kernel: [ 5831.690568] iptables: IN=ens33 OUT= MAC=00:0c:29:85:59:5c:00:50:56:c0:00:08:08:00 SRC=192.168.17.1 DST=192.168.17.128 LEN=76 TOS=0x00 PREC=0x00 TTL=128 ID=14219 DF PROTO=TCP SPT=56326 DPT=22 WINDOW=513 RES=0x00 ACK PSH URGP=0
		String[] line = lines.get(0).split(" ");
		String date = String.join(" ", line[0],line[1],line[2],line[3]);
		String host = line[4];
		String timeFromBoot = String.join(" ", line[6], line[7]);
		String firewallRuleName = line[8];
		
		System.out.println(firewallRuleName);
	}
	
	private void toArrayList() {
		lines = new ArrayList<String>(Arrays.asList(data.toString().split("\n")));
	}
	
}
